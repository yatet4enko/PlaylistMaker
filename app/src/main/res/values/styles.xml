<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarStyle">
        <item name="titleTextAppearance">@style/ToolbarTitleStyle</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>
    <style name="ToolbarTitleStyle">
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="MenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconSize">@dimen/main_screen_button_icon_size</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textSize">@dimen/main_screen_button_font_size</item>
        <item name="android:textColor">@color/dark_blue</item>
        <item name="cornerRadius">@dimen/corner_radius_l</item>
        <item name="elevation">0dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SettingsItemLabelStyle">
        <item name="android:paddingVertical">@dimen/settings_screen_item_padding_vertical</item>
        <item name="android:textSize">@dimen/settings_screen_item_font_size</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="SettingsItemIconStyle">
        <item name="tint">?attr/colorAccent</item>
        <item name="android:padding">@dimen/settings_screen_item_icon_padding</item>
        <item name="android:layout_width">@dimen/settings_screen_item_icon_size</item>
        <item name="android:layout_height">@dimen/settings_screen_item_icon_size</item>
        <item name="android:layout_gravity">end|center_vertical</item>
    </style>
    <style name="TrackNameStyle">
        <item name="android:textSize">@dimen/text_size_m</item>
        <item name="android:textColor">?attr/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="TrackDescriptionStyle">
        <item name="android:textSize">@dimen/text_size_xs</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
    </style>
    <style name="TrackIconStyle">
        <item name="tint">?attr/colorAccent</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="SearchErrorStyle">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/text_size_l</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>
    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="trackTint">@color/gray_light</item>
        <item name="thumbTint">@color/gray</item>
    </style>
</resources>
