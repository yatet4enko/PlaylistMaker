<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/space_l"
    android:paddingVertical="@dimen/space_s">
    <ImageView
        android:id="@+id/track_artwork"
        android:layout_width="45dp"
        android:layout_height="45dp"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/space_s"
        android:paddingTop="@dimen/space_xs"
        android:orientation="vertical">
        <TextView
            android:id="@+id/track_title"
            style="@style/TrackNameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            tools:text="@string/dark_theme"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_xs"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/track_artist"
                style="@style/TrackDescriptionStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="@string/dark_theme"/>
            <TextView
                android:id="@+id/track_duration"
                style="@style/TrackDescriptionStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/dark_theme"/>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        style="@style/TrackIconStyle"
        android:src="@drawable/arrow_forward_icon" />
</LinearLayout>
