<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/space_l"
    android:paddingVertical="@dimen/space_s">
    <ImageView
        android:id="@+id/artwork"
        app:srcCompat="@drawable/track_placeholder"
        android:layout_width="45dp"
        android:layout_height="45dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/space_s"
        android:paddingTop="@dimen/space_xs">

        <TextView
            android:id="@+id/name"
            style="@style/TrackNameStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="@string/dark_theme" />

        <TextView
            android:id="@+id/tracks"
            style="@style/TrackDescriptionStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="@string/dark_theme" />
    </LinearLayout>
</LinearLayout>
